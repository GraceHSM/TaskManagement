<!DOCTYPE html>
<html>
  <head>
    <title>TaskManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body>
    <div class='container-fluid'>
      <span class='notice d-block py-1'><%= flash[:notice] %></span>
      <div class='pt-1 container-fluid'>
        <ul class='info d-flex pl-0'>
          <% if logged_in? %>
            <li><%= link_to t('signout'), logout_path, method:'delete' %></li>
            <li class='ml-3'>Hello, <%= @current_user.username %></li>
          <% end %>
          <li class='ml-auto'><%= link_to '中文', controller: 'tasks', action: 'index', locale: "zh-TW" %></li>
          <li class='ml-3'><%= link_to 'English', controller: 'tasks', action: 'index', locale: "en" %></li>
        </ul>
      </div>
      <div class='container'>
        <h1 class='text-center pt-2'><%= t('TaskManagement') %></h1>
      </div>
    </div>
    <div class='container-fluid'>
      <%= yield %>
    </div>
  </body>
</html>