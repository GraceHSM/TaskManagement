<%= simple_form_for task do |f| %>
  <%= f.input :title, label: false, required: false, placeholder: 'Title' %>
  <%= f.input :content, label: false, required: false, placeholder: 'Content' %>
  <%= f.input :priority, label: t('priority'), required: false, as: :radio_buttons, collection: [[User.human_attribute_name('primary'), 'primary'], [User.human_attribute_name('secondly'), 'secondly'], [User.human_attribute_name('common'), 'common']], checked: 'common' %>

  <%= f.input :status, label: t('status'), required: false, as: :radio_buttons, collection: [[User.human_attribute_name('pending'), 'pending'], [User.human_attribute_name('processing'), 'processing'], [User.human_attribute_name('completed'), 'completed']], checked: 'pending' %>

  <%= f.input :start_at, label: t('start_at'), required: false, as: :date, input_html: { value: DateTime.now.to_s(:taskdate) }, html5: true %>
  <%= f.input :deadline_at, label: t('deadline_at'), required: false, as: :date, input_html: { value: DateTime.now.to_s(:taskdate) }, html5: true %>

  <%= f.submit t('submit'), method: 'POST' %>
<% end %>
<%= link_to t('TaskLists'), root_path %>
