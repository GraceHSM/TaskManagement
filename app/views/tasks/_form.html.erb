<%= simple_form_for task do |f| %>
  <%= f.input :title, label: false, required: false, placeholder: 'Title' %>
  <%= f.input :content, label: false, required: false, placeholder: 'Content' %>
  <%= f.input :priority, label: t('priority'), required: false, as: :radio_buttons, collection: [[Task.human_attribute_name('primary'), 'primary'], [Task.human_attribute_name('secondly'), 'secondly'], [Task.human_attribute_name('common'), 'common']], checked: 'common' %>

  <%= f.input :status, label: t('status'), required: false, as: :radio_buttons, collection: [[Task.human_attribute_name('pending'), 'pending'], [Task.human_attribute_name('processing'), 'processing'], [Task.human_attribute_name('completed'), 'completed']], checked: 'pending' %>

  <%= f.input :start_at, label: t('start_at'), required: false, as: :date, input_html: { value: DateTime.now.to_s(:taskdate) }, html5: true %>
  <%= f.input :deadline_at, label: t('deadline_at'), required: false, as: :date, input_html: { value: DateTime.now.to_s(:taskdate) }, html5: true %>

  <% if checked_tags %>
    <% checked_tags.each do |tag| %>
      <%= check_box_tag "tag_ids[]", tag.id, false, id: "label_#{tag.label}", checked: true %>
    <%= label_tag "label[#{tag.label}]", tag.label %>
    <% end %>
  <% end %>
  <% if tags %>
    <% tags.each do |tag| %>
      <%= check_box_tag "tag_ids[]", tag.id, false, id: "label_#{tag.label}" %>
      <%= label_tag "label[#{tag.label}]", tag.label %>
    <% end %>
  <% end %>
  <%= f.submit t('submit'), method: 'POST' %>
<% end %>
