<%= simple_form_for task do |f| %>
  <%= f.input :title, label: false, placeholder: 'Title' %>
  <%= f.input :content, label: false, placeholder: 'Content' %>

  <%= f.input :priority, label: t('priority'), as: :radio_buttons, collection: [[t('primary'),'primary'], [t('secondly'),'secondly'], [t('common'),'common']] %>

  <%= f.input :status, label: t('status'), as: :radio_buttons, collection: [[t('pending'),'pending'], [t('processing'),'processing'], [t('completed'),'completed']] %>

  <%= f.input :start_at, label: t('start_at'), as: :date, html5: true %>
  <%= f.input :deadline_at, label: t('deadline_at'), as: :date, html5: true %>
  <%= f.submit t('submit'), method: 'POST' %>
<% end %>
<%= link_to t('TaskLists'), root_path %>
