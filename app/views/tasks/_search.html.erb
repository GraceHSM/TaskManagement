<%= search_form_for q do |f| %>
<div class='search border border-1 border-dark px-2 py-2 mt-3'>
<h4 class='mb-0'><%= t('search') %></h4>
  <div class='w-100 d-flex flex-wrap'>
    <% @tags.each do |tag| %>
    <div class='tag d-flex align-item-center rounded border border-1 border-dark mr-2 mt-2'>
      <%= f.radio_button :tags_id_eq, tag.id %>
      <%= f.label "tags_id_eq_#{tag.id}", tag.label, class: 'px-2 py-1 mb-0' %>
    </div>
    <% end %>
  </div>
  <div class='d-flex align-item-center mt-4'>
    <%= f.select :status_eq, options_for_select([[Task.human_attribute_name('pending'), '0'], [Task.human_attribute_name('processing'), '1'], [Task.human_attribute_name('completed'), '2']]), include_blank: t('choose_status') %>
    <%= f.search_field :title_cont, placeholder: 'Search', value:'', class: 'ml-2 w-50' %>
    <%= link_to t('reset'), tasks_path, class: 'btn btn-light text-dark border-secondary ml-auto mr-2' %>
    <%= f.submit t('search'), class: 'btn btn-dark text-light border-secondary ml-2 mr-2' %>
  </div>
</div>
<% end %>