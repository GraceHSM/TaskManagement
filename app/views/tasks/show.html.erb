<%= render './shared/topbar', :@current_user => @task.user %>
<section class="container-fluid">
<h2 class='mt-3'><%= t('TaskDetail') %></h2>
<table class='table'>
  <tr>
    <th><%= Task.human_attribute_name('title') %></th>
    <td><%= @task.title %></td>
  </tr>
  <tr>
    <th><%= Task.human_attribute_name('content') %></th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th><%= TaskTag.human_attribute_name('label') %></th>
    <td>
      <% @task.tags.each do |tag| %>
        <span class='tag rounded border border-1 border-dark px-1 py-1'><%= tag.label %></span>
      <% end %>
    </td>
  </tr>
  <tr>
    <th><%= Task.human_attribute_name('start_at') %></th>
    <td><%= @task.start_at.to_s(:taskdate) %></td>
  </tr>
  <tr>
    <th><%= Task.human_attribute_name('deadline_at') %></th>
    <td><%= @task.deadline_at.to_s(:taskdate) %></td>
  </tr>
  <tr>
    <th><%= Task.human_attribute_name('status') %></th>
    <td><%= Task.human_attribute_name(@task.status) %></td>
  </tr>
  <tr>
    <th><%= Task.human_attribute_name('priority') %></th>
    <td><%= Task.human_attribute_name(@task.priority) %></td>
  </tr>
  <tr>
    <th><%= Task.human_attribute_name('created_at') %></th>
    <td><%= @task.created_at.to_s(:taskdate) %></td>
  </tr>
  <tr>
    <td colspan='2'>
      <div class='button mt-3 mb-5 d-flex justify-content-end'>
      <%= link_to t('TaskLists'), tasks_path, class: 'border-bottom border-secondary shadow btn btn-md btn-default px-3 py-2 mr-auto' %>
      <%= link_to t('edit'), edit_task_path(@task), class: 'border-bottom shadow btn btn-md btn-primary px-3 py-2 mr-4' %>
      <%= link_to t('delete'), task_path(@task), method:'DELETE', class: 'border-bottom shadow btn btn-md btn-danger px-3 py-2', data: { confirm: t('confirm_delete') } %>
    </td>
  </div>
  </tr>
</table>

</section>