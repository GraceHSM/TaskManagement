<%= render 'shared/topbar' %>
<section class="container-fluid">
<h2 class='mt-3'><%= t('UserLists') %></h2>
<table class='table mt-3'>
  <thead>
    <tr>
      <th><%= t('user_name') %></th>
      <th><%= t('email') %></th>
      <th><%= t('task_count') %></th>
      <th><%= t('role') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= link_to user_path(user.id) do %>
          <%= user.username %>
        <% end %>
      </td>
      <td>
        <%= link_to user_path(user.id) do %>
        <%= user.email %>
        <% end %>
      </td>
      <td>
        <%= link_to tasks_user_path(user.id) do %>
          <%= user.tasks_count %>
        <% end %>
      </td>
      <td><%= User.human_attribute_name(user.role) %></td>
      <td>
        <%= link_to t('edit'), edit_user_path(user), class: 'border-bottom shadow btn btn-md btn-primary px-1 py-1 mr-1' %>
        <%= link_to t('delete'), user_path(user), method:'DELETE', class: 'border-bottom shadow btn btn-md btn-danger px-1 py-1', data: { confirm: t('confirm_delete') } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</section>
<%= paginate @users %>