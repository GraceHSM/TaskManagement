<section class="container">
<% if current_user.role == 'member' %>
  <h2 class='mt-3'>Sign Up</h2>
<% else %>
  <h2 class='mt-3'>Create User</h2>
<% end %>
<%= simple_form_for @user do |f| %>
  <%= f.input :username, label: false, placeholder: t('user_name') %>
  <%= f.input :email, label:false, placeholder: t('email') %>
  <%= f.input :password, label: false, placeholder: t('password'), type:'password' %>
  <% if current_user.role == 'admin' %>
    <%= f.input :role, label: t('role'), required: false, as: :radio_buttons, collection: [[User.human_attribute_name('admin'), 'admin'], [User.human_attribute_name('member'), 'member']], checked: 'member' %>
  <% end %>
<%= f.submit t('submit'), method: 'POST' %>
<% end %>
</section>