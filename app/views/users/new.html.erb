<%= render 'topbar' %>
<section class="container-fulid">
<h2 class='mt-3'>Create User</h2>
<%= simple_form_for @user do |t| %>
  <%= t.input :username, label: false, placeholder: 'UserName', class:'form-control' %>
  <%= t.input :email, label:false, placeholder: 'E-mail', class:'form-control' %>
  <%= t.input :password, label: false, placeholder: 'Password', type:'password', class:'form-control' %>
  <%= t.input :password_confirmation, label: false, placeholder: 'Password Confirmation', type:'password', class:'form-control' %>
<%= t.submit 'Submit', method: 'POST' %>
<% end %>
</section>